<!DOCTYPE html>
<html>
<head>
  <title>Show Books</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-success p-2 mb-4">
  <div class="container-fluid">
    <a class="navbar-brand text-white" href="/">   <a class="navbar-brand text-white" href="/">
   Books
    </a></a>

    <ul class="navbar-nav ms-auto">
      <li class="nav-item">
        <a class="nav-link text-white" href="/">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-white" href="/show">Cart</a>
      </li>
    </ul>
  </div>
</nav>

<div class="container mt-5">
  <h3 class="text-center mb-4">All Books</h3>

  <div class="row">
    <% data.forEach((book)=>{ %>
      <div class="col-md-4">
        <div class="card mb-4">
          <img src="<%= book.url %>" class="card-img-top" style="height:250px;">
          <div class="card-body">
            <h5><%= book.title %></h5>
            <p><b>Author:</b> <%= book.author %></p>
            <p><%= book.dsc %></p>
            <p><b>â‚¹ <%= book.price %></b></p>

            <a href="/editData?id=<%= book._id %>" class="btn btn-primary btn-sm">Edit</a>
            <a href="/deleteData?id=<%= book._id %>" class="btn btn-danger btn-sm">Delete</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <a href="/" class="btn btn-success">Add New Book</a>
</div>

</body>
</html>
