<div class="container mt-5">
  <h3 class="text-center mb-4">Add Book</h3>

  <form action="/insertData" method="post">
    <input class="form-control mb-2" name="url" placeholder="Image URL" required>
    <input class="form-control mb-2" name="title" placeholder="Title" required>
    <input class="form-control mb-2" name="author" placeholder="Author" required>
    <textarea class="form-control mb-2" name="dsc" placeholder="Description" required></textarea>
    <input class="form-control mb-3" type="number" name="price" placeholder="Price" required>

    <button class="btn btn-success w-30">Submit</button>
  </form>


</div>

