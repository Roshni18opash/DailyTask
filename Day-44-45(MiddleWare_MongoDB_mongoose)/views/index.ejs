<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blogs</title>
  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- remixicon -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css"
    integrity="sha512-OQDNdI5rpnZ0BRhhJc+btbbtnxaj+LdQFeh0V9/igiEPDiWE2fG+ZsXl0JEH+bjXKPJ3zcXqNyP4/F/NegVdZg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
  </style>
</head>

<body class="bg-dark">
  <div class="container">
    <nav class="navbar navbar-light" style="height: 95px;">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="./logo.png"
            style="height: 110px; width: 200px;">
        </a>
        <ul class="nav justify-content-end text-black" style="font-weight: bold; text-decoration: none;">
          <li class="nav-item">
            <a class="nav-link active fs-5" aria-current="page" href="/" style="color:yellow;">Blogs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link fs-5" href="/form" style="color:rgba(255, 0, 0, 0.959)">Add New Blog</a>
          </li>
          <div class="dropdown">
            <button class="btn bg-info" type="button" data-bs-toggle="dropdown" style="border-radius: 20%;">
              <i class="ri-account-circle-fill" style="color: rgb(248, 250, 252); font-size: 22px;"></i>
            </button>
            <ul class="dropdown-menu bg-info">
              <li><a class="dropdown-item" href="/signup" style="font-size: 18px; font-weight: 600;">Signup</a></li>
              <li><a class="dropdown-item" href="/login" style="font-size: 18px; font-weight: 600;">Login</a></li>
              <li><a class="dropdown-item" href="/logout" style="font-size: 18px; font-weight: 600;">Logout</a></li>
            </ul>
          </div>
        </ul>
      </div>
    </nav>
  </div>
  <!-- page content -->
  <div class="container-fluid">
    <div class="container mt-3">
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <% data.map((val)=>{ %>
          <% let {_id, title, image, bname, type, date, dsc}=val; %>
            <div class="col">
              <div class="card bg-light">
                <div class="card-body">
                  <h5 class="card-title fs-3 mb-3" style="text-decoration: underline;">
                    <%= title %>
                  </h5>
                  <img src="<%= image %>" class="card-img-top mb-3" name="image" alt="<%= title %>"
                    style="height: 250px;">
                  <p class="card-text"><b>Blogger Name:</b>
                    <%= bname %>
                  </p>
                  <p class="card-text"><b>Blog Category:</b>
                    <%= type %>
                  </p>
                  <p class="card-text"><b>Posted:</b>
                    <%= date %>
                  </p>
                  <p class="card-text"><b>Description</b>
                    <%= dsc %>
                  </p>
                  <div>
                    <a href="/deleteData/<%= _id %>" class="btn btn-danger">Delete</a>
                    <a href="/editData?id=<%= _id %>" class="btn btn-info">Edit</a>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>

</body>

</html>